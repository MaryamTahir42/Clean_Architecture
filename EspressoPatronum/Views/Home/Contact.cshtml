
@model EspressoPatronum.Controllers.HomeController
<div class="bg-container">
    <img class="img4 img-fluid" src="~/Images/contact.jpg" alt="
Image">
</div>

<div class="message text-center">
    <p class="ft-1 p6 text-white mb-custom">We'd love to hear from you!<br> Please fill out the form below to contact us.</p>
    <div class="row3 top-10">
        <div class="col-md-6 offset-md-3">
            <form action="/Contact/SendContactForm" method="post">
                <div class="form-group">
                    <label class="text-white" for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label class="text-white" for="Email">Email Address</label>
                    <input type="email" class="form-control " id="Email" name="Email" required>
                </div>
                <div class="form-group">
                    <label class="text-white"  for="Message">Message</label>
                    <textarea class="form-control" id="Message" name="Message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn8 text-white">Send Message</button>
            </form>
        </div>
    </div>
</div>