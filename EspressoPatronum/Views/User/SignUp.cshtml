@model EspressoPatronum.Models.Entities.User

<form class="container mt-4 signupform" asp-action="SignUp" method="post">
    <div class="row2">
        <div class="form-group">
            <input class="form-control un" type="text" name="Username" placeholder="Enter Username" value="@Model?.Username" required/>
        </div>
        <div class="form-group">
            <input class="form-control ps" type="password" name="Password" placeholder="Enter Password" value="@Model?.Password" required />
        </div>
        <div class="form-group">
            <input class="form-control em" type="Email" name="Email" placeholder="Enter Email" value="@Model?.Email" required />
        </div>
        <div class="form-group">
            <input class="form-control ad" type="text" name="Address" placeholder="Enter Address" value="@Model?.Address" required />
        </div>
        <div class="form-group">
            <input class="form-control ad" type="text" name="Role" placeholder="Customer or Admin" value="@Model?.Role" required />
        </div>
        <div class="form-group">
            <button type="submit" class="btns ">Sign Up</button>
        </div>
    </div>
</form>
